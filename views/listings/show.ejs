<% layout('layouts/boilerplate') -%>
<div class="row mt-3"> 
    <div class="col-10 offset-1">
        <h2><%=listing.title%></h2>
    </div>

    <div class="col-10 offset-1 mb-3">
        <div class="card show-card listing-card p-0">
            <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing_image">
        </div>
    </div>
    
    <div class="col-10 offset-1 d-flex flex-wrap justify-content-between">
        
        <div class="col-md-7 listing-details-content p-0 mb-3">
            <div class="card-body px-0">
                <br/>
                <h3 class="card-text"> <%=listing.location%>, <%=listing.country%></h3>
                <p class="card-text"> <%= listing.guests %> guests<span class="dot"> ‚Ä¢ </span> <%= listing.bedrooms %> bedrooms </p>
                

                <div class="d-flex align-items-center mt-3 mb-4">
                    <img src="https://cdn-icons-png.flaticon.com/512/847/847969.png"
                        alt="host" width="50" height="50"
                        class="rounded-circle me-3 border border-2">
                    <div>
                        <p class="mb-0"><b>Hosted by <%= listing.owner.username %></b></p>
                        <p class="text-muted mb-0 small">Superhost ‚Ä¢ 8 years hosting</p>
                    </div>
                </div>
                <hr/>
                
                <p><i class="fa-solid fa-trophy"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b>Top 1% of homes</b><br/>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;This home is one of the highest ranked based on ratings, reviews and reliability.</p>
                <p><i class="fa-solid fa-location-dot"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b>Peace and quiet</b><br/>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Guests say this home is in a quiet area.</p>
                <p><i class="fa-solid fa-key"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b>Great check-in Experience</b><br/>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Recent guests loved the smooth start to this stay.</p>
                
            </div>
        </div>

        <div class="col-md-4 mb-3 d-none d-md-block p-0"> 
            <div class="booking-card card"> 
                <div class="card-body">
                    <div class="price-section d-flex align-items-baseline mb-3">
                        <span class="new-price fs-4 fw-bold me-1">
                            &#8377;<%= listing.price.toLocaleString("en-IN") %> 
                        </span>
                        <span class="nights text-muted"> per night</span>
                        <span class="nights text-muted">+ 18%GST </span>
                        
                    </div>
                    
                    <form method="POST" action="/listings/<%=listing._id%>/reservations" novalidate >
                        <div class="date-box border rounded mt-3 d-flex">
                            <div class="checkin border-end p-2 flex-grow-1">
                                <label class="form-label fw-bold small">CHECK-IN</label>
                                <input type="date" id="checkin" name="booking[checkInDate]" class="form-control border-0 p-0"/>
                                
                            </div>
                            <div class="checkout p-2 flex-grow-1">
                                <label class="form-label fw-bold small">CHECKOUT</label>
                                <input type="date" id="checkout" name="booking[checkOutDate]" class="form-control border-0 p-0"/>
                                
                            </div>
                        </div>

                        <div class="guests border rounded mt-2 p-2">
                            <label for="guests" class="form-label fw-bold small">GUESTS</label>
                            <select id="guests" name="booking[guests]"class="form-select border-0 p-0" required>
                                <option value="1">1 guest</option>
                                <option value="2">2 guests</option>
                                <option value="3">3 guests</option>
                                <option value="4">4 guests</option>
                                <option value="5">5 guests</option>
                                <option value="6">6 guests</option>
                            </select>
                            <div class="invalid-feedback">Please select the number of guests.</div>
                        </div>
                        <button class="reserve-btn btn btn-danger w-100 mt-3">Reserve</button>
                    </form>
                    <p class="note text-center mt-2 small text-muted">You won't be charged yet</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-10 offset-1 mb-3">
        <hr/>
        <h4>About this place</h4>
        <p class="card-text"> <%=listing.description%></p>
        
    </div>
    
    <% if(currUser && currUser._id.equals(listing.owner._id)){%>
    <div class="btns row col-10 offset-1 mb-3 mt-3">
        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-auto edit-btn me-3">Edit</a>
        <form method="post" action="/listings/<%=listing._id%>?_method=Delete" class="col-auto p-0">
            <button class="btn btn-dark"> Delete </button>
        </form>
    </div>
    <%}%>
    
    <div class="card col-10 offset-1 mb-3 amenities" >
        <hr/>
        <h4>What this place offers</h4><br/>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><i class="fa-solid fa-kitchen-set"></i> &nbsp;&nbsp;Kitchen</p>
                    <p><i class="fa-solid fa-tv"></i>&nbsp;&nbsp; TV</p>
                    <p><i class="fa-solid fa-snowflake"></i>&nbsp;&nbsp; AC ‚Äì split-type ductless system</p>
                </div>
                <div class="col-md-6">
                    <p><i class="fa-solid fa-wifi"></i>&nbsp;&nbsp; Wifi</p>
                    <p><i class="fa-solid fa-square-parking"></i>&nbsp;&nbsp; Free parking</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-10 offset-1 mb-3">
        <% if(currUser){%>
        <hr/>
        <h4>Leave a Review</h4>
        <form action="/listings/<%=listing._id%>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3 mt-3" >
                <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-heart">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>
            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                <div class="invalid-feedback">Please submit some comments for review</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
        <%}%>
        <% if(listing.reviews.length>0){%>
            <hr/>
            <div class="row">
                <p><b>All Reviews</b></p>
                <%for ( let review of listing.reviews){ %>
                <div class="card col-md-5 ms-3 mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@<%= review.author.username %></h5>
                        <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>
                        <p class="card-text"><%=review.comment%></p>
                    </div>
                    <% if (currUser && currUser._id.equals(review.author._id)) { %>
                    <form class="mb-3 ms-3" method="post" action="/listings/<%= listing._id%>/reviews/<%= review._id%>?_method=DELETE">
                        <button class="btn btn-sm btn-dark">Delete</button>
                    </form>
                    <% } %>
                </div>
                <%} %>
            </div>
        <%}%>
    </div>

    <div class="col-10 offset-1 mb-3">
        <hr/>
        <h3>Where you'll be</h3>
        <br/>
        <div id="map" style="height:400px; width:100%; border:1px solid #ccc;"></div>
    </div>
</div>

<link
    rel="stylesheet"
    href="https://unpkg.com/leaflet/dist/leaflet.css"
/>
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

<script>
    // Combine city and country from your EJS variables
    const locationString = "<%= listing.location %>, <%= listing.country %>";

    // Use Nominatim (OpenStreetMap's free geocoding service)
    async function loadMap() {
        try {
            const response = await fetch(
                `https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(
                    locationString
                )}`
            );
            const data = await response.json();

            if (data.length === 0) {
                document.getElementById("map").innerHTML =
                    "Map could not be loaded for this location.";
                return;
            }

            const lat = parseFloat(data[0].lat);
            const lon = parseFloat(data[0].lon);

            // Initialize map
            const map = L.map("map").setView([lat, lon], 13);

            // Add OpenStreetMap tiles
            L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
                maxZoom: 20,
                attribution: '¬© OpenStreetMap contributors',
            }).addTo(map);

            // Add marker
            const marker = L.marker([lat, lon]).addTo(map);

            // Add popup info
            const popupContent = `
                <div style="font-size:14px; line-height:1.4;">
                    <h5 style="margin:0;"><%= listing.title %></h5>
                    <p style="margin:2px 0;">üìç <%= listing.location %>, <%= listing.country %></p>
                    <p style="margin:0;">üí∞ ‚Çπ<%= listing.price.toLocaleString("en-IN") %></p>
                    <p style="margin-top:4px;">Welcome to this beautiful stay! Enjoy your visit.</p>
                </div>
            `;

            marker.bindPopup(popupContent).openPopup();
        } catch (error) {
            console.error("Error loading map:", error);
            document.getElementById("map").innerHTML =
                "Map could not be loaded. Please try again later.";
        }
    }

    // Run map loader after DOM is ready
    document.addEventListener("DOMContentLoaded", loadMap);
</script>
